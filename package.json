{
	"name": "fsharp-notebook",
	"displayName": "fsharp-notebook",
	"description": "Data Science Notebook for F# interactive",
	"publisher": "PabloBelin",
	"version": "1.0.0",
	"license": "MIT",
	"author": { 
		"name": "Pablo Belin",
		"email": "pablo.belin@gmail.com"
	},
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:notebookPanel.open",
		"onCommand:notebookPanel.save",
		"onWebviewPanel:notebookPanel"
	],
	"bugs": {
		"url": "https://github.com/pablofrommars/fsharp-notebook/issues"
	},
	"homepage": "https://pablofrommars.github.io/",
	"repository": {
		"type": "git",
		"url": "https://github.com/pablofrommars/fsharp-notebook.git"
	},
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "FSharpNotebook",
			"properties": {
			  "fsharpnotebook.css": {
				"type": "string",
				"default": "",
				"description": "Specifies the path to your custom css style used for saving panel"
			  }
			}
		},
		"commands": [
			{
				"command": "notebookPanel.open",
				"title": "Open Panel",
				"category": "F# Notebook"
			},
			{
				"command": "notebookPanel.save",
				"title": "Save Panel",
				"category": "F# Notebook"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
